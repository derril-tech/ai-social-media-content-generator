# AI Social Media Content Generator Environment Variables

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_social_media
DIRECT_URL=postgresql://postgres:postgres@localhost:5432/ai_social_media

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password

# NATS
NATS_URL=nats://nats_user:nats_password@localhost:4222
NATS_STREAM_PREFIX=ai_social_media

# JWT & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# OpenAI API (for content generation)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# AWS S3 (for asset storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-social-media-assets
AWS_S3_PUBLIC_URL=https://ai-social-media-assets.s3.amazonaws.com

# Social Media API Keys (Platform Connectors)
# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Facebook/Instagram/Meta
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# YouTube
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# TikTok
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Pinterest
PINTEREST_CLIENT_ID=your-pinterest-client-id
PINTEREST_CLIENT_SECRET=your-pinterest-client-secret

# Buffer/Hootsuite (fallback connectors)
BUFFER_API_KEY=your-buffer-api-key
HOOTSUITE_API_KEY=your-hootsuite-api-key

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Security
SESSION_SECRET=your-session-secret
CORS_ORIGIN=http://localhost:3001

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
OTEL_SERVICE_NAME=ai-social-media-generator
OTEL_TRACES_EXPORTER=console

# Billing & Payments (Stripe)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Feature Flags
ENABLE_EXPERIMENTS=true
ENABLE_ANALYTICS=true
ENABLE_SCHEDULING=true

# Rate Limiting
REDIS_RATE_LIMIT_PREFIX=rate_limit:
GENERATION_RATE_LIMIT=100
PUBLISH_RATE_LIMIT=50

# Queue Settings
MAX_CONCURRENT_GENERATIONS=10
MAX_CONCURRENT_PUBLISHES=5
QUEUE_TIMEOUT_MS=30000

# Content Generation
MAX_VARIANTS_PER_PLATFORM=5
DEFAULT_VARIANT_COUNT=3
CONTENT_GENERATION_TIMEOUT_MS=60000

# Asset Storage
MAX_ASSET_SIZE_MB=10
ALLOWED_ASSET_TYPES=image/jpeg,image/png,image/webp,video/mp4

# Cache Settings
CACHE_TTL_SECONDS=3600
BRAND_VOICE_CACHE_TTL=86400
HASHTAG_RANK_CACHE_TTL=7200
